extend base_layout
include mixins/ads

//only display banners on main pages (not home)
block banners
  if banner_msg
   .alert.alert-success.text-center(role="alert") !{banner_msg}
  if api_down
   .alert.alert-warning.text-center(role="alert") !{constants.api_msg}
  if user && user.track===0
     .alert.alert-warning(role="alert") !{constants.untracked_msg}
  if login_req_msg
   .alert.alert-warning(role="alert") Please log in to access the #{login_req_msg} page

block sticky_content
  // body.frame(style="margin-top:70px;")
  body
    paper-drawer-panel(force-narrow)
      paper-header-panel(drawer)
        paper-toolbar
          paper-icon-button(icon='menu' paper-drawer-toggle)
          .title YASP
        div
          paper-item: a(href="/request") Request
          paper-item: a(href="/compare") Compare
          paper-item: a(href='/ratings') Ratings
          paper-item: a(href='/faq') FAQ
          paper-item: a(href='/page/1') Blog
          paper-item: a(href='/status') Status
          paper-item: a(href='/carry') Carry
        
          
      paper-header-panel(main)
        paper-toolbar(class="medium-tall", middle-justify="center")
          paper-icon-button(icon='menu' paper-drawer-toggle)
          .title YASP
          block navigation

        .container
          block banners
          +ad("banner1")
          block content
          +ad("banner3")
          include footer
          
  script.
      //check adblocker
      window.onload = function(){ 
        setTimeout(function() { 
          // We are targeting the first banner ad of AdSense
          var ad = document.querySelector("ins.adsbygoogle");
          
          // If the ad contains no innerHTML, ad blockers are at work
          if (ad && ad.innerHTML.replace(/\s/g, "").length == 0) {
            // Since ad blocks hide ads using CSS too
            ad.style.cssText = 'display:block !important'; 
            // You can put any text, image or even IFRAME tags here
            ad.innerHTML = "<div class='alert alert-info text-center' role='alert'>Blocking ads?  Please consider disabling your ad blocker or donating to help keep YASP running.</div>";
          }
        }, 2000); // The ad blocker check is performed 2 seconds after the page load 
      }; 
